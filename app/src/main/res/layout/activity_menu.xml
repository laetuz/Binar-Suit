<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MenuActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="500dp">

            <RelativeLayout
                android:id="@+id/rel_player"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_menu_player"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/landing_page_one" />

                <TextView
                    android:id="@+id/tv_menu_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:fontFamily="@font/comic_sans"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@id/iv_menu_player"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                >
                <ImageView
                    android:id="@+id/iv_menu_cpu"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/landing_page_two" />

                <TextView
                    android:id="@+id/tv_menu_cpu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:fontFamily="@font/comic_sans"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@id/iv_menu_cpu"
                    android:text="" />
            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>